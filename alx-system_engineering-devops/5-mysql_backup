#!/bin/bash

# Check if the password argument is provided
if [ -z "$1" ]; then
    echo "Usage: $0 <mysql_root_password>"
    exit 1
fi

# Assign the password argument to a variable
MYSQL_ROOT_PASSWORD=$1

# Generate the MySQL dump
mysqldump -u root -p"$MYSQL_ROOT_PASSWORD" --all-databases > backup.sql

# Check if the dump was successful
if [ $? -ne 0 ]; then
    echo "MySQL dump failed"
    exit 1
fi

# Get the current date in day-month-year format
CURRENT_DATE=$(date +%d-%m-%Y)

# Create a tar.gz archive of the dump
tar -czvf "$CURRENT_DATE.tar.gz" backup.sql

# Check if the tar command was successful
if [ $? -ne 0 ]; then
    echo "Failed to create tar.gz archive"
    exit 1
fi

# Remove the uncompressed SQL dump file
rm backup.sql

echo "Backup successfully created: $CURRENT_DATE.tar.gz"
